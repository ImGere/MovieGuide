<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/episodeTitle"
        android:id="@+id/episodeTitle"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/episodeImage"
        android:maxLines="@integer/titlePlotMaxLine"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/episodeImage"
        android:src="@mipmap/ic_photo"
        android:padding="2dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/episodePlot"
        android:id="@+id/episodePlot"
        android:padding="2dp"
        android:layout_below="@+id/episodeTitle"
        android:layout_toEndOf="@+id/episodeImage"
        android:maxLines="@integer/episodePlotMaxLine"/>
</RelativeLayout>